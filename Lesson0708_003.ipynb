    "#\n",
    "sum = 0\n",
    "num = 0\n",
    "while True:\n",
    "    num += 1\n",
    "    input_value = int(input(\"請輸入第{num}個數字(只加總正偶數)\"))\n",
    "    if input_value <0:\n",
    "        break\n",
    "    elif input_value % 2 == 1:\n",
    "        continue\n",
    "    else:\n",
    "        sum += input_value\n",
    "print (f\"正偶數總和為:{sum}\")"
   ]
  }
